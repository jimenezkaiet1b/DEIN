<Window x:Class="ProyectoKaiet.Window13"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ProyectoKaiet"
        mc:Ignorable="d"
        Title="Window13" Height="450" Width="800" Background="#02111B">
    <Window.Resources>
        <Style TargetType="TextBlock">
            <Setter Property="FontFamily" Value="18"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="FontStyle" Value="Normal"/>
            <Setter Property="Foreground" Value="White"></Setter>
        </Style>

    </Window.Resources>

    <Grid>

        <Grid.ColumnDefinitions>
            <ColumnDefinition></ColumnDefinition>
            <ColumnDefinition></ColumnDefinition>
            <ColumnDefinition></ColumnDefinition>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition></RowDefinition>
            <RowDefinition></RowDefinition>
            <RowDefinition></RowDefinition>
            <RowDefinition></RowDefinition>
            <RowDefinition></RowDefinition>
        </Grid.RowDefinitions>

        <TextBlock Text="CREADOR DE TORNEOS" FontSize="20" Grid.Column="1" HorizontalAlignment="Center"></TextBlock>

        <TextBlock Text="Elige un lugar"  Grid.Column="1" Grid.Row="1" FontSize="15"></TextBlock>
        <TextBlock Text="Proporcione el nombre del lugar donde se disputara el torneo"  Grid.Column="1" Grid.Row="1" Margin="0,21,0,0" FontWeight="Light" ></TextBlock>


        <TextBlock Text="Lugar"  Grid.Column="1" Grid.Row="2"></TextBlock>
        <TextBox Grid.Row="2" Grid.Column="1" Text="Introduce un lugar" Margin="0,30" Background="White"/>
        <TextBlock Grid.Column="1" Grid.Row="3" FontWeight="Light" VerticalAlignment="Center" Text="Es un torneo online (eSports)"></TextBlock>
        <CheckBox Grid.Row="3"  Grid.Column="1" VerticalAlignment="Center" HorizontalAlignment="Right" Margin="0,35" Width="33"></CheckBox>

        <Button Grid.Column="1" Grid.Row="4" Background="Aqua" Foreground="White" Click="ButtonAtras_Click" Margin="24,27,171,27">ATRAS</Button>
        <Button Grid.Column="1" Grid.Row="4" Background="Aqua" Foreground="White" Click="ButtonSiguiente_Click" Margin="128,27,24,27">SIGUIENTE</Button>
    </Grid>
</Window>

<Window x:Class="ProyectoKaiet.Window2"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ProyectoKaiet"
             mc:Ignorable="d"
        Title="Window2" Height="450" Width="800" Background="#C0D6DF"
        x:Name="window2">


    <Grid>
        
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="14*"></ColumnDefinition>
            <ColumnDefinition Width="61.3*"></ColumnDefinition>
            <ColumnDefinition Width="61.3*"></ColumnDefinition>
            <ColumnDefinition Width="61.3*"></ColumnDefinition>


        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <!--
			<RowDefinition Height="54*"></RowDefinition>
			<RowDefinition Height="40*"></RowDefinition>
			<RowDefinition Height="40*"></RowDefinition>
			<RowDefinition Height="30*"></RowDefinition>
			<RowDefinition Height="33*"></RowDefinition>
			<RowDefinition Height="119*"></RowDefinition>
			<RowDefinition Height="25*"/>
			<RowDefinition Height="40*"></RowDefinition>
			<RowDefinition Height="58*"></RowDefinition> -->
            <RowDefinition Height="Auto"></RowDefinition>
            <RowDefinition Height="Auto"></RowDefinition>
            <RowDefinition Height="Auto"></RowDefinition>
            <RowDefinition Height="Auto"></RowDefinition>
            <RowDefinition Height="Auto"></RowDefinition>
            <RowDefinition Height="Auto"></RowDefinition>
            <RowDefinition Height="Auto"></RowDefinition>
            <RowDefinition Height="Auto"></RowDefinition>




        </Grid.RowDefinitions>

        <Label Grid.Row="0" Grid.Column="2" HorizontalAlignment="Center" FontSize="20" Margin="34,0" Width="177" >
            <Bold>TORNEO CREADO</Bold>
        </Label>
        <Separator  Background="black" Grid.Row="0" Grid.ColumnSpan="4"  Margin="0,20,0,0"/>

        <StackPanel  Grid.Row="1" Grid.Column="0">
            <Image Source="Imaagenes\ajuste.png" Height="15" ></Image>
            <TextBlock Text="Ajustes" HorizontalAlignment="Center" />
        </StackPanel>
        <StackPanel  Grid.Row="2" Grid.Column="0">
            <Image Source="Imaagenes\info.png" Height="15" ></Image>
            <TextBlock Text="Informacion" HorizontalAlignment="Center" />
        </StackPanel>
        <StackPanel  Grid.Row="3" Grid.Column="0">
            <Image Source="Imaagenes\menu.png" Height="15" ></Image>
            <TextBlock Text="Menu" HorizontalAlignment="Center" />
        </StackPanel>
        <StackPanel  Grid.Row="4" Grid.Column="0">
            <Image Source="Imaagenes\Calendario.png" Height="15" />
            <TextBlock Text="Calendario" HorizontalAlignment="Center" />
        </StackPanel>





        <Label Grid.Row="1" Grid.Column="2" HorizontalAlignment="Center" FontSize="20">
            <TextBlock>Titulo del torneo</TextBlock>
        </Label>
        <Label Grid.Row="2" Grid.Column="2" HorizontalAlignment="Center" FontSize="20" Margin="81,0" Width="83">
            <Border  BorderThickness="0,0,0,1" BorderBrush="Black">
                <TextBlock >Nombre</TextBlock>
            </Border>
        </Label>
        <Label Grid.Row="4" Grid.Column="1" HorizontalAlignment="Center" FontSize="20" Margin="50,0" Width="146">
            <TextBlock>Dias de partido</TextBlock>
        </Label>
        <Label Grid.Row="4" Grid.Column="2" HorizontalAlignment="Center" FontSize="20" Margin="64,0" Width="117">
            <TextBlock>Localizacion</TextBlock>
        </Label>
        <TextBlock Grid.Row="4" Grid.Column="3" Text="Divisiones" FontSize="20" VerticalAlignment="Center" HorizontalAlignment="Center"></TextBlock>
        <Label Background="White"  HorizontalAlignment="Center" FontSize="20"  Grid.Column="3" Grid.Row="5" Margin="57,0,56,99">
            <TextBox Text="Escriba la localizacion" FontSize="10" SpellCheck.IsEnabled="True" TextWrapping="Wrap" Height="17" Width="122" />
        </Label>

        <ComboBox  Grid.Row="5" Grid.Column="1" Margin="73,0,61,99">
            <ComboBoxItem Content="Jornada 1" ></ComboBoxItem>
            <ComboBoxItem Content="Jornada 2"></ComboBoxItem>
            <ComboBoxItem Content="Jornada 3"></ComboBoxItem>
            <ComboBoxItem Content="Todas las Jornadas"></ComboBoxItem>
        </ComboBox>
        <Label Background="white" Grid.Row="5" Grid.Column="2" HorizontalAlignment="Center" FontSize="20" Margin="34,0,34,99" Width="177">
            <TextBox Text="Escriba la localizacion" FontSize="10" Width="167" SpellCheck.IsEnabled="True" TextWrapping="Wrap"></TextBox>
        </Label>
        <Button  Grid.Row="6" Grid.Column="1"  Click="ButtonLocaJornada_Click" >
            <TextBlock>Ver</TextBlock>
        </Button>
        <Button Grid.Row="6" Grid.Column="2" Click="ButtonLoca_Click" >
            <TextBlock>Anadir</TextBlock>
        </Button>



        <Label Background="White" Grid.Row="7" Grid.Column="1" HorizontalAlignment="Center" FontSize="20" Margin="129,10,153,0" Width="454" Grid.ColumnSpan="3">
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Bottom">
                <Button Content="Jornada" Margin="5" Click="ButtonJornada_Click" />
                <Button Content="Clasificacion" Margin="5" Click="ButtonClasi_Click" />
                <Button Content="Equipos"  IsEnabled="False" Margin="5" />
                <Button Content="Calendario" Margin="5" Click="ButtonCalen_Click" />
            </StackPanel>
        </Label>



    </Grid>
</Window>
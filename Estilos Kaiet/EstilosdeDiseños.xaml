<Window x:Class="Estilos_Kaiet.EstilosdeDiseños"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Estilos_Kaiet"
        mc:Ignorable="d"
        Title="EstilosdeDiseños" Height="450" Width="800">
    <StackPanel>
        <StackPanel.Resources>
            <Style TargetType = "{x:Type Button}">
                <Setter Property = "Foreground" Value = "Black" />
                <Setter Property = "Background" Value = "White" />
                <Setter Property = "FontStyle" Value = "Normal" />
                <Setter Property = "FontFamily" Value = "Inter" />

                <Setter Property = "Width" Value = "230" />
                <Setter Property = "Height" Value = "59" />
                <Setter Property = "Margin" Value = "10" />
            </Style>
        </StackPanel.Resources>

        <Button Content="BOTON 1"/>
        <Button Content="BOTON 2"/>
        <Button Background = "Gray" Content="BOTON 3"/>
    </StackPanel>
</Window>

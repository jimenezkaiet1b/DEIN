<Window x:Class="Estilos_Kaiet.EstilosdeAplicacion"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Estilos_Kaiet"
        mc:Ignorable="d"
        Title="EstilosdeAplicacion" Height="450" Width="800" Background="#272635">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <Button x:Name="bttCrearTorneo" Grid.Column="1" Grid.Row="1">CREAR TORNEO</Button>
        <Button x:Name="bttInscripcion" Grid.Column="0" Grid.Row="1">INSCRIPCIÓN</Button>
        <Button x:Name="bttInformacion" Grid.Column="2" Grid.Row="4">INFORMACIÓN</Button>
        <TextBlock Text="CREADOR DE TORNEOS" Grid.Column="1" Grid.Row="0" TextWrapping="Wrap" Margin="10" FontSize="32" Foreground="White" FontWeight="ExtraBlack" />
        <TextBlock Text="TORNEOS" Grid.Column="0" Grid.Row="0" TextWrapping="Wrap" Margin="10" FontSize="32" Foreground="White" FontWeight="ExtraBlack" HorizontalAlignment="Center" />

    </Grid>
</Window>
